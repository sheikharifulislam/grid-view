{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./src/",
        "target": "ES6",
        "module": "CommonJS",
        "jsx": "react",
        "paths": {
            "@/*": ["./src/*"],
            "components/*": ["./src/components/*"],
            "contexts/*": ["./src/contexts/*"],
            "hooks/*": ["./src/hooks/*"],
            "utils/*": ["src/utils/*"],
            "data/*": ["./src/data/*"]
        }
    },
    "include": ["src/**/*"]
}
